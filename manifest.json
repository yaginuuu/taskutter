{
    "manifest_version": 2,
    "name": "Taskutter",
    "version": "1.0.1",
    "description": "ChatWorkのメッセージをマイチャットのタスクに引用できる拡張",
    "content_scripts": [
        {
            "matches": ["https://kcw.kddi.ne.jp/*", "https://www.chatwork.com/*"],
            "js": ["js/jquery-2.1.1.min.js", "js/jquery.selection.js", "js/popup.js", "js/main.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/16.jpg",
        "48": "icons/48.jpg",
        "128": "icons/128.jpg"
    },
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": ["js/background.js"]
    }
}


